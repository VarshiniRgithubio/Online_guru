# AI Model Configuration
# Choose either OpenAI or Gemini
AI_PROVIDER=openai  # Options: openai, gemini

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini Configuration
GOOGLE_API_KEY=your_google_api_key_here

# Model Settings
MODEL_TEMPERATURE=0.3
MODEL_NAME_OPENAI=gpt-4-turbo-preview
MODEL_NAME_GEMINI=gemini-pro

# Multilingual Configuration
SUPPORTED_LANGUAGES=["en", "hi", "te", "kn"]
MULTILINGUAL_EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
DEFAULT_LANGUAGE=en

# RAG Configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=50
VECTOR_DB_PATH=./vector_db
TOP_K_RESULTS=4

# Data Paths
DATA_FOLDER=./data
AUDIO_FOLDER=./audio
TRANSCRIPTS_FOLDER=./transcripts

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log
